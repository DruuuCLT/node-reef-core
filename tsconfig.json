{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2020","DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true
  },
  "include": ["src/**/*"]
}